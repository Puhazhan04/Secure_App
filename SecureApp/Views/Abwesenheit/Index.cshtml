@model IEnumerable<SecureApp.Models.Abwesenheit>

@{
    ViewData["Title"] = "Abwesenheiten";
}

<h2>Abwesenheiten</h2>

<div class="mb-3">
    <a href="javascript:history.back()" class="btn btn-secondary me-2">
        ← Zurück
    </a>

    <a asp-action="Create" class="btn btn-success me-2">
        Neue Abwesenheit erfassen
    </a>

    <a asp-action="Heute" class="btn btn-primary">
        Heute abwesend
    </a>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Mitarbeiter</th>
            <th>Typ</th>
            <th>Von</th>
            <th>Bis</th>
            <th class="text-end">Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Mitarbeiter?.Vorname @item.Mitarbeiter?.Nachname</td>
                <td>@item.Grund</td>
                <td>@item.Von.ToShortDateString()</td>
                <td>@item.Bis.ToShortDateString()</td>
                <td class="text-end">
                    <!-- einzelne Buttons mit Abstand, keine btn-group -->
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-primary btn-sm me-2">
                        Bearbeiten
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-danger btn-sm">
                        Löschen
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p class="text-muted">
        Heute ist niemand abwesend oder es wurden noch keine passenden Abwesenheiten erfasst.
    </p>
}

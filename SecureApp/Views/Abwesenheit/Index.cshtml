@model IEnumerable<SecureApp.Models.Abwesenheit>

@{
    ViewData["Title"] = "Abwesenheiten";

    string BadgeClass(string grund)
    {
        grund = grund?.ToLower() ?? "";
        return grund switch
        {
            "ferien" => "bg-primary",
            "krankheit" => "bg-danger",
            "weiterbildung" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="mb-0">Abwesenheiten</h1>
        <small class="text-muted">Übersicht und Verwaltung der Abwesenheiten</small>
    </div>

    <div class="d-flex gap-2">
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Zurück
        </a>
        <a asp-action="Heute" class="btn btn-primary">
            <i class="bi bi-calendar-check me-1"></i> Heute abwesend
        </a>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg me-1"></i> Neu erfassen
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mitarbeiter</th>
                        <th>Typ</th>
                        <th>Von</th>
                        <th>Bis</th>
                        <th class="text-end">Aktionen</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">
                                @item.Mitarbeiter?.Vorname @item.Mitarbeiter?.Nachname
                            </td>

                            <td>
                                <span class="badge @BadgeClass(item.Grund)">
                                    @item.Grund
                                </span>
                            </td>

                            <td>@item.Von.ToString("dd.MM.yyyy")</td>
                            <td>@item.Bis.ToString("dd.MM.yyyy")</td>

                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-outline-primary btn-sm me-2">
                                    <i class="bi bi-pencil-square me-1"></i> Bearbeiten
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i> Löschen
                                </a>
                            </td>
                        </tr>
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-5">
                                <i class="bi bi-calendar-x display-6 d-block mb-2"></i>
                                Keine Abwesenheiten gefunden.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model IEnumerable<SecureApp.Models.Mitarbeiter>

<h1>Mitarbeiter</h1>

<a asp-action="Create" class="btn btn-success btn-lg mb-3">
    <i class="bi bi-plus-lg"></i> Neuen Mitarbeiter erfassen
</a>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Strasse</th>
            <th>Nr</th>
            <th>PLZ</th>
            <th>Ort</th>
            <th>Land</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Funktion</th>
            <th class="text-end">Aktionen</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Vorname</td>
                <td>@item.Nachname</td>
                <td>@item.Strasse</td>
                <td>@item.Nr</td>
                <td>@item.PLZ</td>
                <td>@item.Ort</td>
                <td>@item.Land</td>
                <td>@item.Email</td>
                <td>@item.Telefon</td>
                <td>@item.Funktion</td>

                <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">

                        <a asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square"></i> Bearbeiten
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i> Löschen
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
